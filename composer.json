{
    "name": "nowo-tech/php-quality-tools",
    "description": "Pre-configured quality tools for PHP projects (Rector, PHP-CS-Fixer, Twig-CS-Fixer). Symfony, Laravel, and framework-agnostic configurations with automatic framework detection.",
    "type": "composer-plugin",
    "license": "MIT",
    "keywords": [
        "rector",
        "php-cs-fixer",
        "twig-cs-fixer",
        "quality",
        "code-style",
        "refactoring",
        "symfony",
        "laravel",
        "php",
        "psr-12"
    ],
    "homepage": "https://github.com/nowo-tech/PhpQualityTools",
    "support": {
        "issues": "https://github.com/nowo-tech/PhpQualityTools/issues",
        "source": "https://github.com/nowo-tech/PhpQualityTools"
    },
    "authors": [
        {
            "name": "HÃ©ctor Franco Aceituno",
            "email": "hectorfranco@nowo.com",
            "homepage": "https://github.com/HecFranco",
            "role": "Developer"
        },
        {
            "name": "Nowo.tech",
            "homepage": "https://nowo.tech"
        }
    ],
    "require": {
        "php": ">=8.1",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "rector/rector": "For automated code refactoring",
        "rector/rector-symfony": "Rector rules for Symfony projects",
        "rector/rector-doctrine": "Rector rules for Doctrine",
        "rector/rector-phpunit": "Rector rules for PHPUnit",
        "driftingly/rector-laravel": "Rector rules for Laravel projects",
        "friendsofphp/php-cs-fixer": "For code style fixing",
        "vincentlanglet/twig-cs-fixer": "For Twig template style fixing"
    },
    "autoload": {
        "psr-4": {
            "NowoTech\\PhpQualityTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NowoTech\\PhpQualityTools\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "NowoTech\\PhpQualityTools\\Plugin",
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@cs-check",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test-coverage": "Run PHPUnit tests with code coverage",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "qa": "Run all quality assurance checks"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
